---
import BaseLayout from "../layouts/BaseLayout.astro";

/**
 * Bilder liegen unter: public/images/gallery/
 * Benennung: vanja-01.jpeg ... vanja-06.jpeg
 */
const images = [
  { src: "/images/gallery/vanja-01.png", title: "Nude Elegance", tag: "Nude" },
  { src: "/images/gallery/vanja-02.png", title: "French Clean", tag: "French" },
  { src: "/images/gallery/vanja-03.png", title: "Rosé Accent", tag: "Rosé" },
  { src: "/images/gallery/vanja-04.png", title: "Gloss Minimal", tag: "Minimal" },
  { src: "/images/gallery/vanja-05.png", title: "Soft Nude", tag: "Nude" },
  { src: "/images/gallery/vanja-06.png", title: "Classic Finish", tag: "Classic" },
];
---

<BaseLayout
  title="Galerie – Vanja Nail Atelier"
  description="Galerie – Beispiele und Inspirationen (Rosé/Nude, clean, zeitlos)."
>
  <section class="section page-top">
    <div class="container">
      <div class="page-head">
        <div>
          <h2 class="page-title">Galerie</h2>
        </div>

        <div class="page-meta" aria-label="Galerie Meta">
          <span class="meta-pill">{images.length} Looks</span>
          <span class="meta-pill">Rosé / Nude</span>
          <span class="meta-pill">Clean Finish</span>
        </div>
      </div>

      <div class="gallery-grid" id="gallery">
        {images.map((img, idx) => (
          <button
            class="gallery-item"
            type="button"
            data-src={img.src}
            data-title={img.title}
            data-index={String(idx)}
            aria-label={`Bild vergrößern: ${img.title}`}
          >
            <img
              class="gallery-img"
              src={img.src}
              alt={`${img.title} – Nageldesign`}
              loading="lazy"
              decoding="async"
            />

            <div class="gallery-overlay" aria-hidden="true"></div>

            <div class="gallery-label">
              <span class="gallery-title">{img.title}</span>
              <span class="gallery-tag">{img.tag}</span>
            </div>
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Lightbox: unauffälliges Overlay, Bild immer vollständig sichtbar (contain), Navigation + Close -->
  <dialog class="lightbox" id="lightbox" aria-label="Bildvorschau">
    <button class="lb-close" type="button" id="lightboxClose" aria-label="Schließen">×</button>

    <button class="lb-nav lb-prev" type="button" id="lightboxPrev" aria-label="Vorheriges Bild">
      <span aria-hidden="true">‹</span>
    </button>
    <button class="lb-nav lb-next" type="button" id="lightboxNext" aria-label="Nächstes Bild">
      <span aria-hidden="true">›</span>
    </button>

    <figure class="lb-figure" aria-live="polite">
      <img id="lightboxImg" class="lb-img" alt="" loading="eager" decoding="async" />
      <figcaption class="lb-cap" id="lightboxTitle"></figcaption>
    </figure>
  </dialog>

  <style>
    .page-top{ padding-top: 26px; }

    .page-head{
      display:flex;
      justify-content:space-between;
      align-items:flex-end;
      gap: 16px;
      margin-bottom: 16px;
    }

    .page-title{
      margin: 0 0 10px;
      font-family: var(--font-display);
      font-size: 30px;
      letter-spacing: -0.01em;
    }

    .page-meta{
      display:flex;
      gap: 10px;
      flex-wrap:wrap;
      justify-content:flex-end;
    }

    .meta-pill{
      font-size: 12px;
      padding: 8px 12px;
      border-radius: 999px;
      border: 1px solid rgba(23,19,20,0.10);
      background: rgba(255,255,255,0.60);
      color: rgba(23,19,20,0.64);
      box-shadow: 0 10px 26px rgba(20,12,14,0.04);
      backdrop-filter: blur(12px);
      white-space: nowrap;
    }

    /* Button reset + Premium hover */
    .gallery-item{
      appearance: none;
      border: none;
      padding: 0;
      margin: 0;
      background: transparent;
      font: inherit;
      color: inherit;
      text-align: left;
    }

    .gallery-item{
      position: relative;
      border-radius: 26px;
      overflow: hidden;
      cursor: pointer;
      transform: translateZ(0);
      box-shadow: 0 18px 44px rgba(20,12,14,0.10);
      transition: transform .16s ease, box-shadow .16s ease, filter .16s ease;
    }

    .gallery-img{
      width: 100%;
      height: 100%;
      display:block;
      object-fit: cover;
      transform: scale(1.01);
      transition: transform .18s ease, filter .18s ease;
    }

    .gallery-overlay{
      position:absolute;
      inset:0;
      background:
        radial-gradient(520px 220px at 15% 18%, rgba(255,255,255,0.14), transparent 55%),
        linear-gradient(180deg, rgba(0,0,0,0.00), rgba(0,0,0,0.34));
      opacity: 0.92;
      transition: opacity .18s ease;
      pointer-events: none;
    }

    .gallery-label{
      position:absolute;
      left: 14px;
      right: 14px;
      bottom: 14px;
      z-index: 2;
      display:flex;
      justify-content:space-between;
      gap: 10px;
      align-items:center;
      color: rgba(255,255,255,0.92);
    }

    .gallery-title{
      font-size: 14px;
      font-weight: 700;
      letter-spacing: -0.01em;
      text-shadow: 0 10px 30px rgba(0,0,0,0.28);
    }

    .gallery-tag{
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      background: rgba(255,255,255,0.16);
      border: 1px solid rgba(255,255,255,0.22);
      backdrop-filter: blur(10px);
      color: rgba(255,255,255,0.92);
      white-space: nowrap;
    }

    .gallery-item:hover{
      transform: translateY(-2px);
      box-shadow: 0 26px 70px rgba(20,12,14,0.16);
    }

    .gallery-item:hover .gallery-img{
      transform: scale(1.04);
      filter: saturate(1.03) contrast(1.03);
    }

    .gallery-item:hover .gallery-overlay{ opacity: 1; }

    .gallery-item:focus-visible{
      outline: 3px solid rgba(192,122,134,0.35);
      outline-offset: 4px;
    }

    /* Tipp-Box */
    .photo-tip{
      margin-top: 16px;
      display:flex;
      gap: 12px;
      align-items:flex-start;
      border-radius: 26px;
      border: 1px solid rgba(23,19,20,0.08);
      background:
        radial-gradient(820px 240px at 20% 0%, rgba(192,122,134,0.10), transparent 60%),
        rgba(255,255,255,0.62);
      box-shadow: 0 18px 54px rgba(20,12,14,0.10);
      padding: 16px;
      backdrop-filter: blur(12px);
    }

    .tip-ic{
      width: 30px;
      height: 30px;
      border-radius: 999px;
      display:inline-flex;
      align-items:center;
      justify-content:center;
      background: rgba(192,122,134,0.16);
      border: 1px solid rgba(192,122,134,0.22);
      color: rgba(23,19,20,0.72);
      flex: 0 0 auto;
      margin-top: 2px;
    }

    @media (max-width: 900px){
      .page-head{ flex-direction:column; align-items:flex-start; }
      .page-meta{ justify-content:flex-start; }
    }

    /* ===== Lightbox: unauffälliges Overlay, Bild immer komplett sichtbar + Navigation ===== */
    .lightbox{
      border: none;
      padding: 0;
      margin: 0;
      width: 100vw;
      height: 100vh;
      max-width: 100vw;
      max-height: 100vh;
      background: transparent;
      overflow: hidden; /* kein Scroll im Dialog */
    }

    .lightbox::backdrop{
      background: rgba(10,6,7,0.62);
      backdrop-filter: blur(8px);
    }

    .lb-close{
      position: fixed;
      top: 16px;
      right: 16px;
      width: 42px;
      height: 42px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.22);
      background: rgba(255,255,255,0.12);
      color: rgba(255,255,255,0.92);
      font-size: 26px;
      line-height: 0;
      cursor: pointer;
      backdrop-filter: blur(12px);
      box-shadow: 0 18px 44px rgba(0,0,0,0.25);
      z-index: 5;
    }
    .lb-close:hover{ background: rgba(255,255,255,0.16); }

    .lb-figure{
      position: fixed;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 12px;
      padding: 22px;
      margin: 0;
      z-index: 2;
    }

    .lb-img{
      width: min(1100px, calc(100vw - 44px));
      height: min(78vh, 720px);
      max-width: 100%;
      max-height: 78vh;
      object-fit: contain; /* keine Crops, kein Scroll nötig */
      border-radius: 22px;
      background: rgba(255,255,255,0.04);
      border: 1px solid rgba(255,255,255,0.14);
      box-shadow: 0 26px 90px rgba(0,0,0,0.35);
    }

    .lb-cap{
      font-size: 14px;
      color: rgba(255,255,255,0.82);
      text-align: center;
      max-width: 60ch;
      padding: 0 10px;
    }

    /* Navigation Buttons (links/rechts am Bildbereich) */
    .lb-nav{
      position: fixed;
      top: 50%;
      transform: translateY(-50%);
      width: 46px;
      height: 46px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.20);
      background: rgba(255,255,255,0.10);
      color: rgba(255,255,255,0.90);
      cursor: pointer;
      backdrop-filter: blur(12px);
      box-shadow: 0 18px 44px rgba(0,0,0,0.22);
      display:flex;
      align-items:center;
      justify-content:center;
      z-index: 4;
      transition: transform .14s ease, background .14s ease, opacity .14s ease;
      opacity: 0.92;
    }

    .lb-nav:hover{
      background: rgba(255,255,255,0.14);
      transform: translateY(-50%) scale(1.04);
      opacity: 1;
    }

    .lb-nav span{
      font-size: 28px;
      line-height: 0;
      margin-top: -2px;
    }

    .lb-prev{ left: 18px; }
    .lb-next{ right: 18px; }

    @media (max-width: 520px){
      .lb-img{
        height: 70vh;
        border-radius: 18px;
      }
      .lb-close{
        top: 12px;
        right: 12px;
        width: 40px;
        height: 40px;
      }
      .lb-prev{ left: 10px; }
      .lb-next{ right: 10px; }
    }
  </style>

  <script>
    const dlg = document.getElementById("lightbox") as HTMLDialogElement | null;
    const imgEl = document.getElementById("lightboxImg") as HTMLImageElement | null;
    const titleEl = document.getElementById("lightboxTitle") as HTMLElement | null;
    const closeBtn = document.getElementById("lightboxClose") as HTMLButtonElement | null;
    const prevBtn = document.getElementById("lightboxPrev") as HTMLButtonElement | null;
    const nextBtn = document.getElementById("lightboxNext") as HTMLButtonElement | null;
    const gallery = document.getElementById("gallery") as HTMLElement | null;

    // State
    let currentIndex = 0;

    function getItems(): HTMLButtonElement[] {
      if (!gallery) return [];
      return Array.from(gallery.querySelectorAll<HTMLButtonElement>("button[data-src][data-index]"));
    }

    function showIndex(idx: number): void {
      const items = getItems();
      if (!dlg || !imgEl || !titleEl || items.length === 0) return;

      const safe = ((idx % items.length) + items.length) % items.length;
      currentIndex = safe;

      const btn = items[safe];
      const src = btn.dataset.src || "";
      const title = btn.dataset.title || "Vanja Nail Atelier";

      imgEl.src = src;
      imgEl.alt = title;
      titleEl.textContent = title;
    }

    function openAtIndex(idx: number): void {
      if (!dlg) return;
      showIndex(idx);
      dlg.showModal();
    }

    function closeLightbox(): void {
      if (!dlg) return;
      if (dlg.open) dlg.close();
    }

    function next(): void {
      showIndex(currentIndex + 1);
    }

    function prev(): void {
      showIndex(currentIndex - 1);
    }

    // Open from grid
    gallery?.addEventListener("click", (e: MouseEvent) => {
      const target = e.target as Element | null;
      const btn = target?.closest("button[data-src][data-index]") as HTMLButtonElement | null;
      if (!btn) return;

      const idx = Number(btn.dataset.index || "0");
      openAtIndex(Number.isFinite(idx) ? idx : 0);
    });

    // Close works (fix)
    closeBtn?.addEventListener("click", (e: MouseEvent) => {
      e.preventDefault();
      e.stopPropagation();
      closeLightbox();
    });

    // Click on backdrop closes (dialog itself)
    dlg?.addEventListener("click", (e: MouseEvent) => {
      if (e.target === dlg) closeLightbox();
    });

    // Nav buttons
    prevBtn?.addEventListener("click", (e: MouseEvent) => {
      e.preventDefault();
      e.stopPropagation();
      prev();
    });

    nextBtn?.addEventListener("click", (e: MouseEvent) => {
      e.preventDefault();
      e.stopPropagation();
      next();
    });

    // Keyboard navigation (only when dialog open)
    window.addEventListener("keydown", (e: KeyboardEvent) => {
      if (!dlg || !dlg.open) return;

      if (e.key === "Escape") {
        e.preventDefault();
        closeLightbox();
        return;
      }

      if (e.key === "ArrowRight") {
        e.preventDefault();
        next();
        return;
      }

      if (e.key === "ArrowLeft") {
        e.preventDefault();
        prev();
        return;
      }
    });

    // Optional: click left/right half of the image to navigate
    imgEl?.addEventListener("click", (e: MouseEvent) => {
      const rect = (e.currentTarget as HTMLImageElement).getBoundingClientRect();
      const x = e.clientX - rect.left;
      if (x < rect.width * 0.5) prev();
      else next();
    });
  </script>
</BaseLayout>