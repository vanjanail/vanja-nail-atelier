---
import BaseLayout from "../layouts/BaseLayout.astro";

// >>> HIER ANPASSEN <<<
const whatsappNumberE164 = "+4917xxxxxxxx"; // ohne Leerzeichen, z.B. +491701234567
const whatsappNumberPretty = "+49 171 xxxxxxx";
const instagramHandle = "vanja.nail.atelier"; // ohne @
const emailAddress = "vanja-nl@gmail.com"; // später echte Mail

const waText = encodeURIComponent("Hallo Vanessa, ich möchte gerne einen Termin anfragen.");

// Robust: nur Ziffern für wa.me
const whatsappDigits = whatsappNumberE164.replace(/\D/g, "");
const whatsappLink = `https://wa.me/${whatsappDigits}?text=${waText}`;

const instagramLink = `https://instagram.com/${instagramHandle}`;
const mailtoLink = `mailto:${emailAddress}?subject=${encodeURIComponent("Terminanfrage – Vanja Nail Atelier")}`;
---

<BaseLayout
  title="Kontakt – Vanja Nail Atelier"
  description="Kontakt & Terminanfrage – Vanja Nail Atelier."
>
  <section class="section page-top contact-page">
    <div class="container">
      <div class="contact-hero">
        <div class="contact-left">
          <div class="contact-eyebrow">KONTAKT</div>
          <h2 class="contact-title">Termin anfragen</h2>
          <p class="section-lead contact-lead">
            Termine nach Vereinbarung. Am schnellsten geht’s über <strong>WhatsApp</strong> oder Instagram – alternativ per E-Mail.
          </p>

          <div class="premium-card contact-main">
            <div class="card-head">
              <h3 class="card-title">Direkt Kontakt</h3>
              <span class="price-tag">Schnell & unkompliziert</span>
            </div>

            <p class="card-desc" style="margin-top:10px;">
              Für eine schnelle Rückmeldung: <strong>Wunschdatum</strong> + <strong>Stil</strong> (Nude/French/clean) + optional <strong>Inspirationsfoto</strong>.
            </p>

            <div class="contact-actions contact-actions-premium">
              <!-- WhatsApp = „Primary“ in der Reihenfolge, aber optisch nur subtil betont -->
              <a
                class="btn-contact btn-wa"
                href={whatsappLink}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="WhatsApp öffnen (neuer Tab)"
              >
                <span class="btn-ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none">
                    <path
                      d="M20.6 11.9a8.6 8.6 0 0 1-12.9 7.4L3.4 20.6l1.5-4.3A8.6 8.6 0 1 1 20.6 11.9Z"
                      stroke="currentColor"
                      stroke-width="1.6"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M9.4 9.3c.2-.5.4-.6.8-.6h.5c.3 0 .5.1.6.4l.7 1.5c.1.3.1.6-.1.8l-.5.6c.6 1 1.5 1.8 2.6 2.4l.6-.5c.2-.2.5-.2.8-.1l1.5.7c.3.1.4.3.4.6v.5c0 .4-.2.6-.6.8-.7.3-2.3.5-4.6-.8-2.4-1.3-3.9-3.7-4.1-4.6-.2-.7 0-1.7.3-2.2Z"
                      fill="currentColor"
                      opacity="0.92"
                    />
                  </svg>
                </span>
                WhatsApp
              </a>

              <a
                class="btn-contact btn-secondary"
                href={instagramLink}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram öffnen (neuer Tab)"
              >
                <span class="btn-ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none">
                    <path
                      d="M8.2 3.6h7.6A4.6 4.6 0 0 1 20.4 8.2v7.6a4.6 4.6 0 0 1-4.6 4.6H8.2a4.6 4.6 0 0 1-4.6-4.6V8.2a4.6 4.6 0 0 1 4.6-4.6Z"
                      stroke="currentColor"
                      stroke-width="1.6"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M12 16.2a4.2 4.2 0 1 0 0-8.4 4.2 4.2 0 0 0 0 8.4Z"
                      stroke="currentColor"
                      stroke-width="1.6"
                    />
                    <path d="M17.2 6.9h.1" stroke="currentColor" stroke-width="3" stroke-linecap="round" />
                  </svg>
                </span>
                Instagram
              </a>

              <a class="btn-contact btn-ghost" href={mailtoLink} aria-label="E-Mail schreiben">
                <span class="btn-ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none">
                    <path
                      d="M5.2 7.6h13.6A2.6 2.6 0 0 1 21.4 10v7.8a2.6 2.6 0 0 1-2.6 2.6H5.2A2.6 2.6 0 0 1 2.6 17.8V10a2.6 2.6 0 0 1 2.6-2.4Z"
                      stroke="currentColor"
                      stroke-width="1.6"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M4.8 10l7.2 5.1L19.2 10"
                      stroke="currentColor"
                      stroke-width="1.6"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </span>
                E-Mail
              </a>
            </div>

            <div class="mini-hr"></div>

            <div class="grid-2 contact-facts">
              <div class="info-box" style="padding:14px;">
                <p class="small muted" style="margin:0;">WhatsApp</p>
                <p style="margin:6px 0 0; font-size:16px; font-weight:800;">
                  {whatsappNumberPretty}
                </p>
              </div>

              <div class="info-box" style="padding:14px;">
                <p class="small muted" style="margin:0;">E-Mail</p>
                <p style="margin:6px 0 0; font-size:16px; font-weight:800;">
                  {emailAddress}
                </p>
              </div>
            </div>
          </div>

          <div class="premium-card" style="margin-top:14px;">
            <div class="card-head">
              <h3 class="card-title">Was du mitschicken solltest</h3>
              <span class="price-tag">Checkliste</span>
            </div>

            <ul class="card-list" style="margin-top:14px;">
              <li><span class="dot"></span><strong>Wunschdatum / Zeitraum</strong> (2–3 Optionen)</li>
              <li><span class="dot"></span><strong>Stil</strong> (Nude / French / clean / Akzent)</li>
              <li><span class="dot"></span><strong>Länge & Form</strong> (kurz/mittel/lang, almond/square …)</li>
              <li><span class="dot"></span><strong>Optional:</strong> Inspirationsfoto</li>
            </ul>
          </div>
        </div>

        <aside class="contact-right">
          <div class="info-box contact-side">
            <div class="side-top">
              <h3 class="side-title">Studio & Zeiten</h3>
              <span class="side-pill">Privat</span>
            </div>

            <div class="side-facts">
              <div class="side-fact">
                <div class="sf-k">Ort</div>
                <div class="sf-v">Privates Atelier</div>
                <div class="sf-s">Adresse nach Terminabsprache</div>
              </div>

              <div class="side-fact">
                <div class="sf-k">Zeiten</div>
                <div class="sf-v">Mo.–Sa.</div>
                <div class="sf-s">nach Vereinbarung</div>
              </div>

              <div class="side-fact">
                <div class="sf-k">Antwort</div>
                <div class="sf-v">Schnell</div>
                <div class="sf-s">mit Wunsch + Foto</div>
              </div>
            </div>

            <div class="mini-hr"></div>

            <h3 class="side-links-title">Links</h3>
            <div class="side-links">
              <a class="side-link" href="/leistungen">Leistungen ansehen</a>
              <a class="side-link" href="/preise">Preise ansehen</a>
              <a class="side-link" href="/galerie">Galerie ansehen</a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <style is:global>
    .page-top{ padding-top: 26px; }

    .contact-page{ position: relative; overflow: hidden; }
    .contact-page::before{
      content:"";
      position:absolute;
      inset:-1px;
      pointer-events:none;
      background:
        radial-gradient(1200px 420px at 20% 0%, rgba(192,122,134,0.10), transparent 60%),
        radial-gradient(900px 380px at 86% 10%, rgba(231,192,184,0.12), transparent 58%),
        linear-gradient(180deg, rgba(255,255,255,0.55), transparent 40%);
      opacity: .95;
    }
    .contact-page .container{ position: relative; z-index: 1; }

    .contact-hero{
      display:grid;
      grid-template-columns: 1.25fr 0.75fr;
      gap: 18px;
      align-items:start;
    }

    .contact-eyebrow{
      font-size: 12px;
      letter-spacing: .26em;
      text-transform: uppercase;
      color: rgba(23,19,20,.55);
      margin-bottom: 10px;
    }

    .contact-title{
      margin: 0 0 10px;
      font-family: var(--font-display);
      font-size: clamp(32px, 3.6vw, 44px);
      letter-spacing: -0.02em;
      line-height: 1.08;
    }

    .contact-lead{
      margin: 0 0 14px;
      color: rgba(23,19,20,.68);
      max-width: 80ch;
    }

    .contact-actions-premium{ gap: 10px; }

    /* WhatsApp: als erstes, aber nur „soft primary“ (nicht knallig) */
    .btn-contact.btn-wa{
      background: rgba(255,255,255,0.62);
      border: 1px solid rgba(192,122,134,0.26);
      color: rgba(23,19,20,0.86);
      box-shadow: 0 14px 34px rgba(20,12,14,0.08);
      backdrop-filter: blur(12px);
    }
    .btn-contact.btn-wa .btn-ic{ color: rgba(192,122,134,0.90); }
    .btn-contact.btn-wa:hover{
      transform: translateY(-1px);
      box-shadow: 0 18px 44px rgba(20,12,14,0.10);
      background: rgba(255,255,255,0.72);
      border-color: rgba(192,122,134,0.34);
    }

    .btn-contact.btn-secondary{
      background: rgba(255,255,255,0.56);
      border-color: rgba(23,19,20,0.12);
      color: rgba(23,19,20,0.86);
      backdrop-filter: blur(10px);
    }

    .btn-contact.btn-ghost{
      background: rgba(255,255,255,0.40);
      border-color: rgba(23,19,20,0.10);
      color: rgba(23,19,20,0.78);
    }

    .mini-hr{
      height: 1px;
      background: rgba(192,122,134,0.14);
      margin: 14px 0;
    }

    .contact-side{
      padding: 18px;
      border-radius: 26px;
    }
    .side-top{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 10px;
      margin-bottom: 10px;
    }
    .side-title{
      margin: 0;
      font-weight: 900;
      letter-spacing: -0.01em;
    }
    .side-pill{
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid rgba(23,19,20,0.10);
      background: rgba(255,255,255,0.55);
      color: rgba(23,19,20,0.66);
      backdrop-filter: blur(10px);
      white-space: nowrap;
    }

    .side-facts{
      display:grid;
      grid-template-columns: 1fr;
      gap: 10px;
    }

    .side-fact{
      border-radius: 18px;
      border: 1px solid rgba(23,19,20,0.08);
      background: rgba(255,255,255,0.52);
      padding: 12px 12px;
    }

    .sf-k{
      font-size: 11px;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: rgba(23,19,20,0.52);
      margin-bottom: 6px;
    }
    .sf-v{
      font-weight: 850;
      color: rgba(23,19,20,0.88);
      line-height: 1.1;
    }
    .sf-s{
      margin-top: 4px;
      font-size: 13px;
      color: rgba(23,19,20,0.62);
    }

    .side-links-title{
      margin: 0 0 10px;
      font-weight: 850;
      color: rgba(23,19,20,0.86);
    }

    .side-links{
      display:flex;
      flex-direction: column;
      gap: 8px;
    }

    .side-link{
      display:inline-flex;
      align-items:center;
      justify-content:space-between;
      padding: 10px 12px;
      border-radius: 14px;
      border: 1px solid rgba(23,19,20,0.08);
      background: rgba(255,255,255,0.46);
      color: rgba(23,19,20,0.76);
      transition: transform .12s ease, background .12s ease, border-color .12s ease;
    }
    .side-link:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.62);
      border-color: rgba(192,122,134,0.18);
    }

    @media (max-width: 1000px){
      .contact-hero{ grid-template-columns: 1fr; }
    }
  </style>
</BaseLayout>
