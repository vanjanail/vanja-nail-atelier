    .card{
      max-width: 860px;
      margin: 0 auto;
      border-radius: 28px;
      border: 1px solid rgba(192,122,134,0.14);
      background:
        radial-gradient(820px 260px at 18% 10%, rgba(192,122,134,0.12), transparent 60%),
